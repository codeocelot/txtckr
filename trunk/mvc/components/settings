			$this->ris['key']['T3'] = 'series'; // Title series
			$this->ris['key']['TI'] = 'btitle'; // Book title
			$this->ris['key']['TY'] = 'reftype'; # not OpenURL mapping // Type of reference (must be the first tag)
			$this->ris['key']['U1'] = 'misc'; # not OpenURL mapping // User definable 1
			$this->ris['key']['U2'] = 'misc'; # not OpenURL mapping // User definable 2
			$this->ris['key']['U3'] = 'misc'; # not OpenURL mapping // User definable 3
			$this->ris['key']['U4'] = 'misc'; # not OpenURL mapping // User definable 4
			$this->ris['key']['U5'] = 'misc'; # not OpenURL mapping // User definable 5
			$this->ris['key']['UR'] = 'id'; // Web/URL
			$this->ris['key']['VL'] = 'volume'; // Volume number
			$this->ris['key']['Y1'] = 'date'; // Primary date
			$this->ris['key']['Y2'] = 'date'; // Secondary Date[3]
/*

	[2] http://www.refman.com/support/risformat_tags_02.asp
	[3] http://www.refman.com/support/risformat_tags_03.asp
